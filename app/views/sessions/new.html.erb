<h1>Sign In</h1>

<%= form_with url: signin_path do |f| %>
    <div class="mb-3">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control", placeholder: "admin@myapp.com" %>
    </div>
    <div class="mb-3">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control", placeholder: "123456" %>
        <%= link_to "Forgot your password?", password_reset_path %>
    </div>
    
    <div class="mb-3">
        <%= f.submit "Log In", disable_with: 'Logging In...', class: "btn btn-primary" %>
    </div>
<% end %>