<h1>Sign Up</h1>

<%= form_with model: @user, url: signup_path do |f| %>
    <%= render "shared/form_errors", f: f %>
    <div class="mb-3">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control", placeholder: "admin@myapp.com" %>
    </div>
    <div class="mb-3">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control", placeholder: "123456" %>
    </div>
    <div class="mb-3">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "123456" %>
    </div>
    <div class="mb-3">
        <%= f.submit "Join!", disable_with: 'Joining...', class: "btn btn-primary" %>
    </div>
<% end %>